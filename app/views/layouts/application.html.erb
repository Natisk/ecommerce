<!DOCTYPE html>
<html>
  <head>
    <title>Ecommerce</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <%= render 'shared/navbar' %>

    <main class="container mx-auto mt-28 max-w-7xl px-2 sm:px-6 ls:px-8">
      <% if notice.present? %>
        <p id="notice" class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block">
          <%= notice %>
        </p>
      <% end %>
      <% if alert.present? %>
        <p id="alert" class="py-2 px-3 bg-red-50 mb-5 text-red-500 font-medium rounded-lg inline-block">
          <%= alert %>
        </p>
      <% end %>

      <%= yield %>
    </main>

    <%= render 'shared/footer' %>
  </body>
</html>
