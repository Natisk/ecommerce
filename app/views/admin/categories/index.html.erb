<div class="w-full">
  <% content_for :title, "Categories" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Categories</h1>
    <%= link_to "New category", 
        new_admin_category_path, 
        class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="admin_categories" class="min-w-full">
    <% @admin_categories.each do |admin_category| %>
      <%= render admin_category %>
      <p>
        <%= link_to "Show this category", 
                    admin_category, 
                    class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
