<div class="md:w-2/3 w-full flex">
  <div>
    <%= render @order %>

    <%= link_to "Edit this order",
                edit_admin_order_path(@order), 
                class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Back to orders", 
                admin_orders_path, 
                class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to "Destroy this order", 
                    admin_order_path(@order), 
                    method: :delete, 
                    class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
