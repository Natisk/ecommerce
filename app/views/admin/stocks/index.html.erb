<div class="w-full">
  <% content_for :title, "Stocks" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Stocks</h1>
    <%= link_to "New stock", new_admin_product_stock_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
  </div>

  <div id="stocks" class="min-w-full">
    <% @stocks.each do |stock| %>
      <%= render stock %>
      <p>
        <%= link_to "Show this stock", [:admin, @product, stock], class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
